@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    body {
        background-color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333333;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 600;
        text-align: center;
        margin-top: 50px;
    }

    .form-container {
        background-color: #ffffff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px #dcdcdc;
        padding: 20px;
        margin: 50px auto;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-group textarea {
        resize: vertical;
        overflow: auto;
    }

    .form-group textarea::-webkit-resizer {
        display: block;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: #e5e5e5;
        border: 2px solid white;
        position: absolute;
        bottom: 0;
        right: 0;
        z-index: 1;
    }

    .form-control {
        height: 100%;
        resize: none;
    }


    label {
        display: block;
        margin-bottom: 10px;
        font-size: 1.1rem;
        font-weight: 500;
    }

    textarea {
        width: 100%;
        height: 120px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #dcdcdc;
        font-size: 1rem;
        line-height: 1.5rem;
        resize: none;
    }

    .submit-btn {
        background-color: #0078d4;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 1.2rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .submit-btn:hover {
            background-color: #005a9e;
        }

    #output {
        width: 100%;
        height: 120px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #dcdcdc;
        font-size: 1rem;
        line-height: 1.5rem;
        resize: none;
    }

    .history-list {
        display: flex;
        flex-direction: column;
    }

    .history-item {
        display: flex;
        justify-content: flex-start;
        margin-bottom: 10px;
    }

    .userinputtitle, .machineoutputtitle {
        font-size: 12px;
        color: #777;
        margin-bottom: 5px;
    }

    .userinputvalue, .machineoutputvalue {
        white-space: pre-line;
        padding: 10px;
        border-radius: 20px;
        font-size: 14px;
    }

    .userinputvalue {
        background-color: #f5f5f5;
        color: #333;
        margin-right: auto;
    }

    .machineoutputvalue {
        background-color: #0078d4;
        color: #fff;
        margin-left: auto;
    }

    .history-item:nth-child(odd) .userinputvalue {
        background-color: #fff;
    }

    .history-item:nth-child(odd) .machineoutputvalue {
        background-color: #555;
    }

    .completion-details {
        width: 500px;
        display: flex;
        justify-content: space-between;
        font-size: small;
        color: grey;
    }

    .completion-cost {
        white-space: pre-line;
    }

    .submit-btn[disabled] {
        background-color: #cccccc;
        color: #666666;
        cursor: not-allowed;
    }

</style>

<div id="loading-overlay"></div>
<div class="form-container">
    <form method="post">
        <div class="form-group">
            <label for="input">Input:</label>
            <textarea class="form-control" id="input" name="Input" rows="8"></textarea>
        </div>

        <button type="submit" class="submit-btn">Submit</button>
    </form>

    <div>@Html.Raw(Model.HtmlHistory)</div>
</div>

<script>
    var button = document.getElementById("submit-btn");
    button.addEventListener("click", function() {
        var overlay = document.getElementById("loading-overlay");
        overlay.style.display = "block";
    });
</script>
